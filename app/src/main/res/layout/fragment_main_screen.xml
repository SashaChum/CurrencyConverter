<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/my_peachy">


    <com.chivorn.smartmaterialspinner.SmartMaterialSpinner
        android:id="@+id/spinner_left"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:layout_marginHorizontal="12dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/spinner_right"
        app:layout_constraintTop_toTopOf="parent"
        app:smsp_isSearchable="true"
        app:smsp_enableSearchHeader="false"
        app:smsp_itemListBackgroundColor="@android:color/darker_gray"
        app:smsp_searchHint="Выбор базовой валюты"
        app:smsp_floatingLabelColor="@color/my_dark_blue"
        app:smsp_floatingLabelText="Базовая валюта"
        app:smsp_floatingLabelSize="13sp"
        app:smsp_hint="Базовая валюта"
        app:smsp_hintColor="@color/my_dark_blue"
        app:smsp_hintSize="16sp"
        app:smsp_itemColor="@color/my_dark_blue"
        app:smsp_itemSize="16sp"
        app:smsp_itemListColor="@color/white"
        app:smsp_multilineError="false"
        app:smsp_selectedItemListColor="@color/black"/>

    <com.chivorn.smartmaterialspinner.SmartMaterialSpinner
        android:id="@+id/spinner_right"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:layout_marginHorizontal="12dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/spinner_left"
        app:layout_constraintTop_toTopOf="parent"
        app:smsp_isSearchable="true"
        app:smsp_enableSearchHeader="false"
        app:smsp_itemListBackgroundColor="@android:color/darker_gray"
        app:smsp_searchHint="Выбор целевой валюты"
        app:smsp_floatingLabelColor="@color/my_dark_blue"
        app:smsp_floatingLabelText="Целевая валюта"
        app:smsp_floatingLabelSize="13sp"
        app:smsp_hint="Целевая валюта"
        app:smsp_hintColor="@color/my_dark_blue"
        app:smsp_hintSize="16sp"
        app:smsp_itemColor="@color/my_dark_blue"
        app:smsp_itemSize="16sp"
        app:smsp_itemListColor="@color/white"
        app:smsp_multilineError="false"
        app:smsp_selectedItemListColor="@color/black"
        />

    <EditText
        android:id="@+id/edit_text_field"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:gravity="center_horizontal"
        android:hint="@string/enter_hint"
        android:inputType="numberDecimal"
        android:textColor="@color/my_dark_blue"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/spinner_left" />

    <Button
        android:id="@+id/calculation_button"
        android:layout_width="wrap_content"
        android:layout_height="72dp"
        android:layout_marginTop="24dp"
        android:backgroundTint="@color/my_dark_blue"
        android:elevation="10dp"
        android:fontFamily="serif"
        android:stateListAnimator="@null"
        android:text="@string/calculate_text"
        android:textColor="@color/white"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edit_text_field" />


</androidx.constraintlayout.widget.ConstraintLayout>